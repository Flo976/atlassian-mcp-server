{
  "name": "atlassian-mcp-server",
  "version": "2.0.0",
  "description": "MCP server bridging AI agents with Atlassian Cloud APIs (Jira and Confluence)",
  "main": "mcp-server/dist/index-full.js",
  "bin": {
    "atlassian-mcp": "mcp-server/dist/index-full.js"
  },
  "scripts": {
    "install:all": "npm install && cd mcp-server && npm install",
    "build": "cd mcp-server && npm run build",
    "start": "cd mcp-server && npm start",
    "dev": "cd mcp-server && npm run dev",
    "watch": "cd mcp-server && npm run watch",
    "clean": "cd mcp-server && npm run clean",
    "test": "echo 'Tests located in tests/ folder'",
    "lint": "cd mcp-server && npm run lint",
    "build:dxt": "node build-dxt.js",
    "package": "npm run build:dxt"
  },
  "keywords": [
    "atlassian",
    "jira",
    "confluence",
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "mcp-server"
  ],
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.11.0"
  }
}
